<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Kayıtlı Randevular</title>
  <link rel="stylesheet" href="bootstrap/css/bootstrap.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <link rel="stylesheet" href="css/muco.css">
  <link rel="stylesheet" href="css/main.css">

</head>
<%-include("partials/header") %>

<body>
  <div id="booking" class="section">
    <div class="section-center">
      <div class="container">
        <div class="row">
          <div class="booking-form">
            <form class="okan-form">
              <div class="form-header">
                <h2>Kayıtlı Randevularınız</h2>
              </div>
              <table class="table table-hover table-dark">
                <thead>
                  <tr>
                    <th>Geçmişteki Randevularınız</th>
                  </tr>
                </thead>
                <tbody>
                  <%rows.forEach(function(items){ %>
                  <tr>
                    <%if(Date.parse(items.RandevuTarihi) <= items.bugun){%>
                    <td><%=items.r_gun%></td>
                    <td><%=items.halisaha_secimi%></td>
                    <%}else { %>
                    <%} %>
                  </tr>
                  <%}) %>
                </tbody>
              </table>
              <br><br>
              <table class="table table-hover table-dark">
                <thead>
                  <tr>
                    <th>Bugün&Gelecekteki Randevularınız</th>
                  </tr>
                </thead>
                <tbody>
                  <%rows.forEach(function(items){ %>
                  <tr>
                    <%if(Date.parse(items.RandevuTarihi) > items.bugun){%>
                    <td><%=items.r_gun%></td>
                    <td><%=items.halisaha_secimi%></td>
                    <!-- <td><a href="/randevu-guncelle" name='button' id="<%=items.r_gun%>" value="<%=items.halisaha_secimi%>" type=" button" class="btn btn-danger btn-sm">Guncelle</a></td> -->
                    <%}else { %>
                    <%} %>
                  </tr>
                  <%}) %>
                </tbody>
              </table>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%-include("partials/footer") %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script src="bootstrap/js/jquery.min.js" charset="utf-8"></script>
<script src="bootstrap/js/bootstrap.min.js" charset="utf-8"></script>
<script src="js/kayıtlı-randevular.js" charset="utf-8"></script>

</html>